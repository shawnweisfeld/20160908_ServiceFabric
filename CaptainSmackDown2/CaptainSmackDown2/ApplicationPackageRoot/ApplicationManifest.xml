         </StatefulService>
      </Service>
      <Service Name="Api">
         <StatelessService ServiceTypeName="ApiType" InstanceCount="[Api_InstanceCount]">
            <SingletonPartition />
         </StatelessService>
      </Service>
   </DefaultServices>
</ApplicationManifest>